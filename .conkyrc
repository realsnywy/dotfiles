-- =========================
-- Helper Functions
-- =========================
local function get_iface()
    local f = io.popen("ip route | grep default | awk '{print $5}'")
    local iface = f:read("*l")
    f:close()
    return iface or "wlan0"
end

local iface = get_iface()

